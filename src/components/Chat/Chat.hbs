<img class="Picture Chat-Picture" src="{{image}}" alt="{{ title }}">
<div class="Chat-Info">
  <div class="Chat-Header">
    <h4 class="Chat-Title">{{title}}</h4>
    <time class="Status {{ status.state }}">{{status.time}}</time>
  </div>
  <div class="Chat-Preview">{{#if sender}}<span class="Chat-Sender">{{ sender }}</span>{{/if}}{{preview}}</div>
  {{#if unread}}
  <div class="Chat-UnreadCount">{{unread}}</div>
  {{/if}}
</div>
