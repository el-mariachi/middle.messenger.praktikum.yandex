{
  "singleQuote": true,
  "tabWidth": 2,
  "semi": true,
  "overrides": [
    {
      "files": "*.hbs",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "Makefile",
      "options": {
        "singleQuote": false,
        "useTabs": true
      }
    },
    {
      "files": ".json",
      "options": {
        "parser": "json5"
      }
    }
  ]
}
